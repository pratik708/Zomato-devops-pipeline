# Example Terraform variables file
# Copy this to terraform.tfvars and customize with your values
# terraform.tfvars is gitignored for security

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# EC2 Configuration
instance_type = "t3.micro"
# TODO: Replace with your EC2 key pair name
key_name      = "fullstack-cicd"

# Security Configuration 
# TODO: Replace with your IP address for better security
# Get your IP: curl ifconfig.me
allowed_ssh_cidr = ["128.185.168.210/32"]
allowed_ssh_cidr = ["0.0.0.0/0"]

# Network Configuration (optional - defaults are fine)
# vpc_cidr           = "10.0.0.0/16"
# public_subnet_cidr = "10.0.1.0/24"
