# Ansible Inventory - Zomato Application Servers
# This file defines the target servers for deployment
# Update the ansible_host IP after running terraform apply

[app_servers]
# Application Server - Using public IP for deployment
zomato-server ansible_host=107.21.240.12 ansible_user=ubuntu
app_server ansible_host=107.21.240.12 ansible_user=ubuntu

[app_servers:vars]
# Python interpreter on Ubuntu
ansible_python_interpreter=/usr/bin/python3

# Application deployment directory
app_dir=/home/ubuntu/zomato-app

# Environment
environment=production

[jenkins_servers]
# Jenkins server - updated from terraform output
jenkins-server ansible_host=107.21.240.12 ansible_user=ubuntu

[jenkins_servers:vars]
ansible_python_interpreter=/usr/bin/python3
